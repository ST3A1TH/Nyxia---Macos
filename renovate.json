{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Australia/Hobart",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "postUpgradeTasks": {
        "matchManagers": ["pnpm"],
        "commands": ["pnpm install"],
        "fileFilters": ["package.json", "pnpm-lock.yaml"]
      }
    }
  ]
}
